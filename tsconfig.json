{
  "compilerOptions": {
    "target": "es2016",                                  
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "baseUrl": "./src",                                  
    "paths": {
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@config/*": ["config/*"]
    },                                      
    "resolveJsonModule": true,                        
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true                                
  }
}